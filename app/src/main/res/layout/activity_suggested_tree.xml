            android:layout_height="@dimen/_39sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:background="@drawable/button_bg_3"
            android:fontFamily="@font/ubuntu_medium"
            android:paddingStart="@dimen/_15sdp"
